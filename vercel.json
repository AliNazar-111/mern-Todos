{
  "version": 2,
  "builds": [
    {
      "src": "Backend/src/server.js",
      "use": "@vercel/node"
    },
    {
      "src": "Frontend/package.json",
      "use": "@vercel/static-build"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "Backend/src/server.js"
    },
    {
      "src": "/(.*)",
      "dest": "/Frontend/$1"
    }
  ],
  "buildCommand": "npm install --prefix Backend && npm install --prefix Frontend && npm run build --prefix Frontend"
}
